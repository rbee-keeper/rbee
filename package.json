{
  "name": "@rbee/monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:ui": "turbo dev --filter=@rbee/ui",
    "dev:commercial": "turbo dev --filter=@rbee/ui --filter=@rbee/commercial --filter=@rbee/marketplace",
    "dev:keeper": "turbo dev --filter=@rbee/ui --filter=@rbee/keeper-ui",
    "dev:marketplace": "turbo dev --filter=@rbee/ui --filter=@rbee/marketplace-sdk --filter=@rbee/keeper-ui --filter=@rbee/marketplace",
    "dev:queen": "turbo dev --filter=@rbee/ui --filter=@rbee/keeper-ui --filter=@rbee/queen-rbee-ui --filter=@rbee/queen-rbee-react --filter=@rbee/queen-rbee-sdk",
    "dev:hive": "turbo dev --filter=@rbee/ui --filter=@rbee/keeper-ui --filter=@rbee/rbee-hive-ui --filter=@rbee/rbee-hive-react --filter=@rbee/rbee-hive-sdk",
    "dev:worker": "turbo dev --filter=@rbee/ui --filter=@rbee/llm-worker-ui --filter=@rbee/llm-worker-react --filter=@rbee/llm-worker-sdk",
    "dev:product": "turbo dev --filter=@rbee/ui --filter=@rbee/keeper-ui --filter=@rbee/queen-rbee-ui --filter=@rbee/queen-rbee-react --filter=@rbee/queen-rbee-sdk --filter=@rbee/rbee-hive-ui --filter=@rbee/rbee-hive-react --filter=@rbee/rbee-hive-sdk --filter=@rbee/llm-worker-ui --filter=@rbee/llm-worker-react --filter=@rbee/llm-worker-sdk",
    "dev:all": "turbo dev",
    "build": "turbo run build",
    "build:ui": "pnpm --filter @rbee/ui run build",
    "build:commercial": "pnpm run build:ui && pnpm --filter @rbee/commercial run build",
    "build:docs": "pnpm run build:ui && pnpm --filter @rbee/user-docs run build",
    "build:frontend": "pnpm run build:ui && pnpm --filter @rbee/commercial run build && pnpm --filter @rbee/user-docs run build",
    "lint": "turbo run lint",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "a11y:theme": "node frontend/scripts/a11y/contrast-check.js"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "concurrently": "^9.2.1",
    "playwright": "^1.56.1",
    "turbo": "^2.6.0"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.1.14"
    }
  },
  "dependencies": {
    "typescript": "^5.9.3"
  }
}
