{
  "name": "@rbee/user-docs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 7824 --webpack",
    "build": "NEXT_PUBLIC_SITE_URL=https://docs.rbee.dev next build --webpack",
    "comment": "TEAM-450: --webpack flag needed for both dev and build due to Nextra v4 + Next.js 16 Turbopack incompatibility",
    "start": "next start",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "deploy": "pnpm run build && npx wrangler pages deploy out/ --project-name=rbee-user-docs --branch=main",
    "preview": "pnpm run build && npx wrangler pages deploy out/ --project-name=rbee-user-docs --branch=preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts"
  },
  "dependencies": {
    "@opennextjs/cloudflare": "^1.12.0",
    "@rbee/env-config": "workspace:*",
    "@rbee/ui": "workspace:*",
    "lucide-react": "^0.553.0",
    "next": "16.0.1",
    "nextra": "^4.6.0",
    "nextra-theme-docs": "^4.6.0",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.3",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.47.0"
  }
}
