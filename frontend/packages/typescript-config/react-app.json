{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Application",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["es2022", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "noEmit": true,
    "types": ["vite/client"],
    "useDefineForClassFields": true
  }
}
