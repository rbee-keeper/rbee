{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@rbee/ui/*": ["./src/*"],
      "@rbee/ui": ["./src/index.ts"]
    },
    "types": ["node", "vite/client"]
  },
  "include": ["src/**/*", "src/assets/images.d.ts", "src/global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
