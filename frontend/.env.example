# ============================================================
# Frontend Environment Configuration
# ============================================================
# TEAM-XXX: Frontend-specific environment variables
# 
# Copy this file to .env.local and customize for your environment
# Vite automatically loads .env.local (it's in .gitignore)
#
# All variables must be prefixed with VITE_ to be exposed to the browser
# ============================================================

# ------------------------------------------------------------
# Backend API URLs
# ------------------------------------------------------------

# Queen-rbee API
VITE_QUEEN_API_URL=http://localhost:7833

# Rbee-hive API
VITE_HIVE_API_URL=http://localhost:7835

# LLM Worker API
VITE_LLM_WORKER_API_URL=http://localhost:8080

# SD Worker API
VITE_SD_WORKER_API_URL=http://localhost:8081

# Worker Catalog API
VITE_WORKER_CATALOG_API_URL=http://localhost:8787

# ------------------------------------------------------------
# Development Settings
# ------------------------------------------------------------

# Enable development mode (uses Vite dev servers for iframes)
VITE_DEV_MODE=true

# Enable HTTPS
VITE_USE_HTTPS=false

# ------------------------------------------------------------
# Public-facing Site URLs (for cross-linking)
# ------------------------------------------------------------

# Commercial site
VITE_COMMERCIAL_URL=http://localhost:7822

# Marketplace
VITE_MARKETPLACE_URL=http://localhost:7823

# User documentation
VITE_USER_DOCS_URL=http://localhost:7811

# ------------------------------------------------------------
# External Services
# ------------------------------------------------------------

# Hugging Face
VITE_HUGGINGFACE_BASE_URL=https://huggingface.co

# GitHub
VITE_GITHUB_BASE_URL=https://github.com
