# ============================================================
# rbee Environment Configuration
# ============================================================
# TEAM-XXX: Centralized environment variable configuration
# 
# Copy this file to .env and customize for your environment
# DO NOT commit .env to version control (it's in .gitignore)
#
# See PORT_CONFIGURATION.md for detailed port documentation
# ============================================================

# ------------------------------------------------------------
# Backend Service Ports
# ------------------------------------------------------------

# Queen-rbee (Orchestrator)
QUEEN_PORT=7833
QUEEN_URL=http://localhost:7833

# Rbee-hive (Hive Manager)
HIVE_PORT=7835
HIVE_URL=http://localhost:7835

# LLM Worker
LLM_WORKER_PORT=8080
LLM_WORKER_URL=http://localhost:8080

# SD Worker
SD_WORKER_PORT=8081
SD_WORKER_URL=http://localhost:8081

# ComfyUI Worker (PLANNED)
COMFY_WORKER_PORT=8188
COMFY_WORKER_URL=http://localhost:8188

# vLLM Worker (PLANNED)
VLLM_WORKER_PORT=8000
VLLM_WORKER_URL=http://localhost:8000

# Worker Catalog (Hono/Cloudflare Worker)
WORKER_CATALOG_PORT=8787
WORKER_CATALOG_URL=http://localhost:8787

# ------------------------------------------------------------
# Frontend Development Ports
# ------------------------------------------------------------

# Keeper GUI (Tauri)
KEEPER_DEV_PORT=5173

# Queen UI (Development)
QUEEN_UI_DEV_PORT=7834

# Hive UI (Development)
HIVE_UI_DEV_PORT=7836

# LLM Worker UI (Development)
LLM_WORKER_UI_DEV_PORT=7837

# ComfyUI Worker UI (Development - PLANNED)
COMFY_WORKER_UI_DEV_PORT=7838

# vLLM Worker UI (Development - PLANNED)
VLLM_WORKER_UI_DEV_PORT=7839

# Storybook Ports
RBEE_UI_STORYBOOK_PORT=6006
COMMERCIAL_STORYBOOK_PORT=6007

# Public-facing sites
COMMERCIAL_PORT=7822
MARKETPLACE_PORT=7823
USER_DOCS_PORT=7811

# ------------------------------------------------------------
# External Service URLs
# ------------------------------------------------------------

# Hugging Face (for model downloads)
HUGGINGFACE_BASE_URL=https://huggingface.co

# GitHub Releases (for binary downloads)
GITHUB_RELEASES_BASE_URL=https://github.com

# ------------------------------------------------------------
# Security & Authentication
# ------------------------------------------------------------

# API Token (required for non-loopback binding)
# LLORCH_API_TOKEN=your-secret-token-here

# ------------------------------------------------------------
# Development Settings
# ------------------------------------------------------------

# Enable development mode (uses Vite dev servers)
DEV_MODE=true

# Enable HTTPS (for production)
USE_HTTPS=false

# ------------------------------------------------------------
# Hive Configuration
# ------------------------------------------------------------

# Hive ID (alias for this machine)
HIVE_ID=localhost

# Queen URL for hive heartbeat
HIVE_QUEEN_URL=http://localhost:7833

# ------------------------------------------------------------
# Testing & CI
# ------------------------------------------------------------

# Test run identifier
# LLORCH_RUN_ID=auto-generated

# Proof bundle output directory
# LLORCH_PROOF_DIR=.proof_bundle

# BDD test feature path
# LLORCH_BDD_FEATURE_PATH=tests/features
