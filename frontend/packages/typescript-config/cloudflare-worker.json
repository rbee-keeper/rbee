{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Cloudflare Worker",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["@cloudflare/workers-types"],
    "noEmit": true,
    "allowJs": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "*.ts", "*.tsx"],
  "exclude": ["node_modules", "dist"]
}
